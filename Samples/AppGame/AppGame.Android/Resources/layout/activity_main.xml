<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:paddingTop="100dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:textSize="28dp"
        android:text="@string/app_description"
        />
    <Button
         android:id="@+id/simpleGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/simple_game"
        />

    <Button
         android:id="@+id/interactiveGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/simpleGameButton"
        android:layout_centerHorizontal="true"
        android:text="@string/interactive_game"
        />

    <Button
         android:id="@+id/spritesheetGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/interactiveGameButton"
        android:layout_centerHorizontal="true"
        android:text="@string/spritesheet_game"
        />

        <Button
         android:id="@+id/texturePackerGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/spritesheetGameButton"
        android:layout_centerHorizontal="true"
        android:text="@string/texture_packer_game"
        />

     <Button
         android:id="@+id/nestingGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/texturePackerGameButton"
        android:layout_centerHorizontal="true"
        android:text="@string/nesting_game"
        />
</RelativeLayout>